@model AppVendasWeb.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Novo Cliente";
}

<h4 class="text-center">Cadastrar Novo Cliente</h4>



<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div value="Create" class="row ">
                <div class="col-12">

                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="ClienteNome" class="control-label"></label>
                        <input asp-for="ClienteNome" class=" form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="ClienteNome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" id="CPF" class=" form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class=" form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" type="date" class=" form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" id="Celular" class=" form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="DataCadastro" class="control-label"></label>
                        <input asp-for="DataCadastro" class=" form-control p-2 py-3 rounded-end" value=@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") readonly /> 
                        <span asp-validation-for="DataCadastro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                <div class="form-group form-check form-switch my-3">
                    <label class="form-check-label">
                        <input class="form-check-input" role="switch" asp-for="CadastroAtivo" /> @Html.DisplayNameFor(model => model.CadastroAtivo)
                    </label>
                </div>
                </div>
            <div class="row g-2">
              
               
                <div class="col">
                    <div class="form-group" style="display:flex;    justify-content: flex-start; margin-top:30px">
                        <button type="submit" value="Create" class="btn btn-success w-50 h-100">
                            <svg bootstrap-icon="CheckLg" width="20" height="20" aria-label="Salvar"></svg>
                            <br /> Salvar
                        </button>
                    </div>
                    
                </div>
            </div>
</div>

            </div>
        </form>
































    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

